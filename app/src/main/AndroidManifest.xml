<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="ie.app.visitwaterford">

    <uses-permission android:name="android.permission.INTERNET" />

    <!--
         The ACCESS_COARSE/FINE_LOCATION permissions are not required to use
         Google Maps Android API v2, but you must specify either coarse or fine
         location permissions for the 'MyLocation' functionality. 
    -->
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name="ie.app.activities.Home"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity android:name="ie.app.activities.Place" />
        <activity android:name="ie.app.activities.Ratings" />
        <activity android:name="ie.app.activities.Login" />
        <activity android:name="ie.app.activities.SplashScreen">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="ie.app.activities.Registration" />
        <activity
            android:name="ie.app.activities.Donate"
            android:label="@string/title_activity_donate"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity android:name="ie.app.activities.EditDataActivity"/>
        <activity android:name="ie.app.activities.ListDataActivity"/>
        <activity android:name="ie.app.activities.Journal"/>
        <activity android:name="ie.app.activities.Report" />
        <activity android:name="ie.app.activities.Crystal" />
        <activity android:name="ie.app.activities.Tower" />
        <activity android:name=".Greenway" />
        <activity android:name=".Museum" />
        <activity android:name=".Palace" />
        <activity android:name="ie.app.activities.Camera"></activity>
    </application>

</manifest>